<?xml version="1.0"?>
<odoo>
    <template id="report_order_id">
        <t t-call="web.basic_layout">
            <div class="page">
                <div class="header">
                    <h2 class="report-title">Commands Details</h2>
                    <p class="report-date">Date: <t t-esc="time.strftime('%Y-%m-%d %H:%M:%S')"/></p>
                </div>
                <div class="content">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Pharmacy</th>
                                <th>Medicine</th>
                                <th>Price</th>
                                <th>Book Date</th>
                                <th>State</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="docs" t-as="record">
                                <td><t t-esc="record.code or ''"/></td>
                                <td><t t-esc="record.pharmacie.name or ''"/></td>
                                <td><t t-esc="record.medicament.name or ''"/></td>
                                <td><t t-esc="record.medicament.price or ''"/> DH</td>
                                <td><t t-esc="record.orderBookDate or ''"/></td>
                                <td><t t-esc="record.orderState or ''"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="summary">
                    <div class="summary-item">
                        <p>Total Booked Medicines: <span><t t-esc="len(docs.filtered(lambda r: r.orderState == 'booked'))"/></span></p>
                    </div>
                    <div class="summary-item">
                        <p>Total Canceled Medicines: <span><t t-esc="len(docs.filtered(lambda r: r.orderState == 'canceled'))"/></span></p>
                    </div>
                    <div class="summary-item">
                        <p>Total Paid Medicines: <span><t t-esc="len(docs.filtered(lambda r: r.orderState == 'paid'))"/></span></p>
                    </div>
                     <div class="summary-item">
                        <p>Total Price of Paid Medicines: <span><t t-esc="sum(docs.filtered(lambda r: r.orderState == 'paid').mapped('medicament.price'))"/></span> DH</p>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
